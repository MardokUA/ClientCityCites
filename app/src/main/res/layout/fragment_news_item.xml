<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/news_date"
                android:layout_width="55dp"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/news_important_marker"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/news_date"
                android:layout_toEndOf="@+id/news_date"/>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/news_image"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="55dp" />

            <ImageButton
                android:id="@+id/news_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_menu_share"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/news_image"
                    android:layout_marginTop="30dp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent" />
            <TextView
                android:id="@+id/news_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/news_image"
                android:layout_toEndOf="@+id/news_image"
                android:layout_toRightOf="@+id/news_image"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Test News Text!"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>